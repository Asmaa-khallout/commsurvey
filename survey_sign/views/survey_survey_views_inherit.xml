<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="survey_survey_view_form_inherit" model="ir.ui.view">
            <field name="name">survey_survey_view_form_inherit</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_survey_view_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="questions"]' position='before'>
	                <group name="sign" string="Signature">
                        <field name="show_signature" string="Sign"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>